# 3D Asset Integration System - Environment Variables Template
# Copy this file to .env and fill in your actual API keys and credentials

# =============================================================================
# PHASE 1: FREE & SIMPLE PLATFORMS (No authentication required)
# =============================================================================
# These platforms work without API keys or authentication

# OpenGameArt.org - No API key needed (public access)
# Free3D - No API key needed (public access)

# =============================================================================
# PHASE 2: FREE WITH REGISTRATION PLATFORMS
# =============================================================================

# Sketchfab API (Free tier available)
SKETCHFAB_API_KEY=your_sketchfab_api_key_here
SKETCHFAB_CLIENT_ID=your_sketchfab_client_id_here
SKETCHFAB_CLIENT_SECRET=your_sketchfab_client_secret_here

# Clara.io API (Free tier available)
CLARA_IO_TOKEN=your_clara_io_token_here
CLARA_IO_API_KEY=your_clara_io_api_key_here

# =============================================================================
# PHASE 3: GAME DEVELOPMENT PLATFORMS
# =============================================================================

# Unity Asset Store (Unity ID required)
UNITY_ID=your_unity_id_here
UNITY_PASSWORD=your_unity_password_here
UNITY_API_KEY=your_unity_api_key_here

# Adobe Mixamo (Adobe ID required)
ADOBE_ID=your_adobe_id_here
ADOBE_CLIENT_ID=your_adobe_client_id_here
ADOBE_CLIENT_SECRET=your_adobe_client_secret_here
ADOBE_ACCESS_TOKEN=your_adobe_access_token_here

# =============================================================================
# PHASE 4: PROFESSIONAL MARKETPLACES
# =============================================================================

# CGTrader API (Commercial license required)
CGTRADER_API_KEY=your_cgtrader_api_key_here
CGTRADER_CLIENT_ID=your_cgtrader_client_id_here
CGTRADER_CLIENT_SECRET=your_cgtrader_client_secret_here

# TurboSquid API (Commercial license required)
TURBOSQUID_API_KEY=your_turbosquid_api_key_here
TURBOSQUID_CLIENT_ID=your_turbosquid_client_id_here
TURBOSQUID_CLIENT_SECRET=your_turbosquid_client_secret_here

# Unreal Marketplace (Epic Games ID required)
EPIC_ID=your_epic_id_here
EPIC_CLIENT_ID=your_epic_client_id_here
EPIC_CLIENT_SECRET=your_epic_client_secret_here
EPIC_ACCESS_TOKEN=your_epic_access_token_here

# =============================================================================
# ADVANCED FEATURES CONFIGURATION
# =============================================================================

# AI Recommendation System
AI_MODEL_PATH=models/asset_recommender.pkl
AI_LEARNING_RATE=0.01
AI_SIMILARITY_THRESHOLD=0.7
AI_MAX_RECOMMENDATIONS=10

# Batch Processing
BATCH_MAX_WORKERS=4
BATCH_CHUNK_SIZE=10
BATCH_TIMEOUT=300
BATCH_RETRY_ATTEMPTS=3
BATCH_MEMORY_LIMIT=2GB

# Custom Platform Integration
CUSTOM_PLATFORM_TEMPLATE_DIR=templates
CUSTOM_PLATFORM_PLUGIN_DIR=plugins
CUSTOM_PLATFORM_VALIDATION=true
CUSTOM_PLATFORM_AUTO_DISCOVERY=true

# =============================================================================
# BLENDER MCP CONFIGURATION
# =============================================================================

# Blender MCP Server
BLENDER_MCP_HOST=localhost
BLENDER_MCP_PORT=8000
BLENDER_MCP_DEBUG=false
BLENDER_MCP_LOG_LEVEL=INFO

# =============================================================================
# GENERAL SYSTEM CONFIGURATION
# =============================================================================

# Asset Storage
ASSET_BASE_DIR=~/3d_assets
ASSET_TEMP_DIR=/tmp/3d_assets
ASSET_CACHE_SIZE=100MB
ASSET_CACHE_TTL=3600

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/integration.log
LOG_MAX_SIZE=50MB
LOG_BACKUP_COUNT=10

# Performance
MAX_CONCURRENT_DOWNLOADS=5
DOWNLOAD_TIMEOUT=300
REQUEST_RATE_LIMIT=60
REQUEST_BURST_LIMIT=10

# Security
ENCRYPT_API_KEYS=true
AUDIT_LOGGING=true
SECURE_TEMP_FILES=true

# =============================================================================
# DEVELOPMENT AND TESTING
# =============================================================================

# Development Mode
DEV_MODE=false
DEBUG_MODE=false
SIMULATION_MODE=false
MOCK_API_RESPONSES=false

# Testing
TEST_MODE=false
TEST_DATA_DIR=test_data
TEST_TIMEOUT=30
TEST_RETRY_ATTEMPTS=3

# =============================================================================
# PLATFORM-SPECIFIC SETTINGS
# =============================================================================

# Rate Limiting (requests per minute)
SKETCHFAB_RATE_LIMIT=1000
CLARA_IO_RATE_LIMIT=2000
UNITY_RATE_LIMIT=2000
MIXAMO_RATE_LIMIT=1000
CGTRADER_RATE_LIMIT=500
TURBOSQUID_RATE_LIMIT=300
UNREAL_RATE_LIMIT=200

# Download Settings
DEFAULT_DOWNLOAD_FORMAT=fbx
SUPPORTED_FORMATS=blend,fbx,obj,dae,gltf,glb,3ds,max
MAX_FILE_SIZE=500MB
DOWNLOAD_CHUNK_SIZE=8192

# Import Settings
BLENDER_SCALE_FACTOR=1.0
BLENDER_APPLY_SCALE=true
BLENDER_BAKE_ANIMATIONS=true
BLENDER_OPTIMIZE_MESHES=true

# Export Settings
EXPORT_QUALITY=high
EXPORT_TEXTURE_RESOLUTION=2048
EXPORT_POLYGON_LIMIT=50000
EXPORT_MATERIAL_LIMIT=10

# =============================================================================
# ANALYTICS AND MONITORING
# =============================================================================

# Analytics
ANALYTICS_ENABLED=true
TRACK_USAGE_STATS=true
TRACK_PERFORMANCE_METRICS=true
TRACK_USER_BEHAVIOR=true
TRACK_ASSET_TRENDS=true

# Monitoring
MONITORING_ENABLED=true
HEALTH_CHECK_INTERVAL=60
PERFORMANCE_MONITORING=true
ERROR_TRACKING=true

# Reporting
DAILY_REPORTS=true
WEEKLY_REPORTS=true
MONTHLY_REPORTS=true
CUSTOM_REPORTS=true

# =============================================================================
# CACHING AND OPTIMIZATION
# =============================================================================

# Caching
CACHE_ENABLED=true
CACHE_BACKEND=memory
CACHE_SIZE=100MB
CACHE_TTL=3600
CACHE_COMPRESSION=true

# Optimization
LAZY_LOADING=true
CONNECTION_POOLING=true
REQUEST_BATCHING=true
PARALLEL_PROCESSING=true

# =============================================================================
# BACKUP AND RECOVERY
# =============================================================================

# Backup
BACKUP_ENABLED=true
BACKUP_FREQUENCY=daily
BACKUP_RETENTION_DAYS=30
BACKUP_COMPRESSION=true

# Recovery
AUTO_RECOVERY=true
RECOVERY_ATTEMPTS=3
RECOVERY_TIMEOUT=300

# =============================================================================
# NOTIFICATIONS AND ALERTS
# =============================================================================

# Email Notifications
EMAIL_ENABLED=false
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=your_email@gmail.com
EMAIL_PASSWORD=your_email_password
EMAIL_FROM=noreply@yourdomain.com
EMAIL_TO=admin@yourdomain.com

# Slack Notifications
SLACK_ENABLED=false
SLACK_WEBHOOK_URL=your_slack_webhook_url
SLACK_CHANNEL=#3d-assets
SLACK_USERNAME=3D-Asset-Bot

# Discord Notifications
DISCORD_ENABLED=false
DISCORD_WEBHOOK_URL=your_discord_webhook_url
DISCORD_USERNAME=3D-Asset-Bot

# =============================================================================
# CUSTOM PLATFORM INTEGRATIONS
# =============================================================================

# Custom Platform 1
CUSTOM_PLATFORM_1_NAME=MyCustomPlatform
CUSTOM_PLATFORM_1_API_KEY=your_custom_platform_1_api_key
CUSTOM_PLATFORM_1_BASE_URL=https://api.mycustomplatform.com
CUSTOM_PLATFORM_1_RATE_LIMIT=1000

# Custom Platform 2
CUSTOM_PLATFORM_2_NAME=AnotherCustomPlatform
CUSTOM_PLATFORM_2_API_KEY=your_custom_platform_2_api_key
CUSTOM_PLATFORM_2_BASE_URL=https://api.anothercustomplatform.com
CUSTOM_PLATFORM_2_RATE_LIMIT=500

# =============================================================================
# WEBHOOKS AND INTEGRATIONS
# =============================================================================

# Webhook URLs
WEBHOOK_SUCCESS_URL=
WEBHOOK_ERROR_URL=
WEBHOOK_PROGRESS_URL=

# External Integrations
GITHUB_INTEGRATION=false
GITHUB_TOKEN=your_github_token
GITHUB_REPO=your_github_repo

JIRA_INTEGRATION=false
JIRA_URL=your_jira_url
JIRA_USERNAME=your_jira_username
JIRA_PASSWORD=your_jira_password

# =============================================================================
# NOTES AND INSTRUCTIONS
# =============================================================================

